<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/cardview_dark_background"
    android:theme="@style/AppTheme.AppBarOverlay">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Source File:"
        app:layout_constraintBottom_toBottomOf="@+id/selectSourceFile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/selectSourceFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_upload"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sourceFilePath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notSelected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectSourceFile" />

</androidx.constraintlayout.widget.ConstraintLayout>